<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_match"
    android:padding="@dimen/dimen_8"
    tools:context=".app.ProductsFragment"
    tools:showIn="@layout/activity_products">

    <com.zappos.consumer.custom.CustomEditText
        android:id="@+id/search_product"
        style="@style/match_wrap"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawablePadding="5dp"
        android:background="@drawable/rounded_corners"
        android:drawableLeft="@drawable/ic_magnifier"
        android:hint="Search for product..." />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="8dp"
        android:id="@+id/products_recycler_view"
        style="@style/match_match"
        android:layout_below="@id/search_product" />

</RelativeLayout>
